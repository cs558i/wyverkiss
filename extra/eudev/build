#!/bin/sh -e

MAKE=gmake ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --sbindir=/usr/bin \
    --enable-hwdb \
    --disable-introspection

gmake
gmake DESTDIR="$1" install

# Install runit service.
install -Dm755 udevd.run         "$1/etc/sv/udevd/run"
ln -s /run/runit/supervise.udevd "$1/etc/sv/udevd/supervise"
